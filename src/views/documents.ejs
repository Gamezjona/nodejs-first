    <!DOCTYPE html>
    <html lang="es">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Documentos</title>
        <%- include('partials/head.ejs') %>
    </head>
    <body>
        <%- include('partials/navigation.ejs', { url: "<a class='nav-link' href='/usuarios/" + usuario.id + "/edit'>Perfil</a>"}) %>
    
        <div class="container mt-4">
            <h2 class="text-center">Documentos Subidos <%= usuario.nombre %></h2>
            <div class="table-responsive shadow-lg p-3 mb-5 bg-body rounded">
                <table class="table table-hover table-bordered">
                    <thead class="table-dark text-center">
                        <tr>
                            <th>ID</th>
                            <th>Nombre</th>
                            <th>Tipo</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (documents.length > 0) { %>
                            <% documents.forEach(doc => { %>
                                <tr>
                                    <td class="text-center"><%= doc.id %></td>
                                    <td><%= doc.nombre %></td>
                                    <td class="text-center"><%= doc.tipo_archivo %></td>
                                    <td class="text-center">
                                        <form action="/documentos/<%= doc.id %>?_method=DELETE" method="POST" class="d-inline" onsubmit="return confirm('Â¿Eliminar este documento?');">
                                            <button type="submit" class="btn btn-danger btn-sm">Borrar</button>
                                        </form>
                                    </td>
                                </tr>
                            <% }); %>
                        <% } else { %>
                            <tr>
                                <td colspan="4" class="text-center text-muted">No hay documentos disponibles</td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
            <div class="text-center mt-3">
                <a href="/documentos/crear" class="btn btn-success btn-lg shadow-sm">Agregar Documento</a>
            </div>
        </div>
        
        
        <%- include('partials/footer.ejs') %>
        <%- include('partials/scripts.ejs') %>
    </body>
    </html>