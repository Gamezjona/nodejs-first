<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Documentos</title>
    <%- include('partials/head.ejs') %>
    <link rel="stylesheet" href="/css/main.css"> 
</head>
<body>
  <%- include('partials/navigation.ejs', { url: "<a class='nav-link' href='/usuarios/" + usuario.id + "/edit'>Perfil</a>"}) %>
    
    <div class="container mt-4">
        <h2 class="text-center">Documentos Subidos</h2>
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Nombre</th>
                        <th>Tipo</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (documents.length > 0) { %>
                        <% documents.forEach(doc => { %>
                            <tr>
                                <td><%= doc.id %></td>
                                <td><%= doc.nombre %></td>
                                <td><%= doc.tipo_archivo %></td>
                                <td>
                                    <form action="/documentos/<%= doc.id %>?_method=DELETE" method="POST" class="d-inline" onsubmit="return confirm('Â¿Eliminar este documento?');">
                                        <button type="submit" class="btn btn-danger btn-sm">Borrar</button>
                                    </form>
                                </td>
                            </tr>
                        <% }); %>
                    <% } else { %>
                        <tr>
                            <td colspan="4" class="text-center">No hay documentos disponibles</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
        <div class="text-center mt-3">
            <a href="/documentos/crear" class="btn btn-success">Agregar Documento</a>
        </div>
    </div>
    
    <%- include('partials/footer.ejs') %>
    <%- include('partials/scripts.ejs') %>
</body>
</html>
