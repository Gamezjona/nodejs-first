<!DOCTYPE html>

<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de Usuarios</title>
    <%- include('partials/head.ejs') %>
</head>
<body>
    <%- include('partials/navigation.ejs') %>
    
    <div class="container mt-4">
        <h2 class="text-center">Lista de Usuarios</h2>
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Nombre</th>
                        <th>Email</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (usuarios.length > 0) { %>
                        <% usuarios.forEach(usuario => { %>
                            <tr>
                                <td><%= usuario.id %></td>
                                <td><%= usuario.nombre %> <%= usuario.apellido %></td>
                                <td><%= usuario.email %></td>
                                <td>
                                    <a href="/usuarios/<%= usuario.id %>/editar" class="btn btn-warning btn-sm">Editar</a>
                                    <form action="/usuarios/<%= usuario.id %>?_method=DELETE" method="POST" class="d-inline" onsubmit="return confirm('¿Eliminar este usuario?');">
                                        <button type="submit" class="btn btn-danger btn-sm">Borrar</button>
                                    </form>
                                </td>
                            </tr>
                        <% }); %>
                    <% } else { %>
                        <tr>
                            <td colspan="4" class="text-center">No hay usuarios registrados</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
        <div class="text-center mt-3">
            <a href="/usuarios/nuevo" class="btn btn-success">Agregar Usuario</a>
        </div>
    </div>
    
    <%- include('partials/footer.ejs') %>
    <%- include('partials/scripts.ejs') %>
</body>

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Documentos</title>
    <%- include('partials/head.ejs') %>
  </head>
  <body>
    <%- include('partials/navigation.ejs') %>

    <section>
      <div class="wrapper">
        <h2 class="tituloWraper">Usuarios</h2>

        <div class="table-container">
          <table class="tablaWraper">
            <thead>
              <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Correo</th>
                <th>Editar</th>
                <th>Borrar</th>
              </tr>
            </thead>
            <tbody id="users">
                <% if (users.length > 0) { %>
                    <% users.forEach(doc => { %>
                        <tr>
                            <td><%= doc.id %></td>
                            <td><%= doc.nombre %></td>
                            <td><%= doc.correo %></td>
                            <td><form action="/usuarios/<%= doc.id %>?_method=PUT" method="POST" style="display:inline;">
                                <button type="submit" onclick="return confirm('¿Estás seguro de eliminar este documento?');">Editar</button>
                              </form></td>
                            <td>
                              <!-- Usamos un formulario para enviar una solicitud DELETE -->
                              <form action="/usuarios/<%= doc.id %>?_method=DELETE" method="POST" style="display:inline;">
                                <button type="submit" onclick="return confirm('¿Estás seguro de eliminar este documento?');">Borrar</button>
                              </form>
                            </td>
                        </tr>
                    <% }); %>
                <% } else { %>
                    <tr>
                        <td colspan="3" style="text-align: center;">No hay documentos disponibles</td>
                    </tr>
                <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </section>

    <%- include('partials/alerts.ejs') %>
    
    <%- include('partials/footer.ejs') %> <%- include('partials/scripts.ejs') %>
  </body>
</html>
