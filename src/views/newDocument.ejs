<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Nuevo Documento</title>
    <%- include('partials/head.ejs') %>
    <link rel="stylesheet" href="/css/style2.css">
</head>
<body class="new-document-page">
    <%- include('partials/navigation.ejs', { url: "<a class='nav-link' href='/usuarios/" + usuario.id + "/edit'>Perfil</a>"}) %>
    
    <div class="main-content-container">
        <div class="content-card document-form-card">
            <h2 class="page-title">Subir Nuevo Documento</h2>
            
            <form action="/documentos" method="POST" enctype="multipart/form-data">
                <div class="mb-4">
                    <label for="archivo" class="form-label">Seleccionar Archivo</label>
                    <input type="file" class="form-control" id="archivo" name="archivo" required>
                </div>
                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-upload w-100">
                        <i class="fas fa-cloud-upload-alt"></i> Subir Documento
                    </button>
                </div>
            </form>
        </div>
    </div>
    
    <%- include('partials/alerts.ejs') %>
    <%- include('partials/footer.ejs') %>
    <%- include('partials/scripts.ejs') %>
</body>
</html>